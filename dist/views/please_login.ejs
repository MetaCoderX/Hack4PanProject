<div class="error-login-container">
    <div class="error-login-content">
        <div class="error-login-header">
            <div class="error-circle">
                <i class="fa fa-exclamation-triangle"></i>
            </div>
            <p>Sorry!</p>
        </div>
        <div class="error-login-title">
            <p>You must be logged in</p>
        </div>
        <div class="error-login-body">
            <button class="cancel-login-btn" onclick="closeErrorLogin()">Dismiss</button>
            <button class="direct-login-btn" onclick="openLoginForm()">Login</button>
        </div>
    </div>
</div>